#include <bits/stdc++.h> 
void connectNodes(BinaryTreeNode< int > *root) {
    if(!root) {
        return;
    }
    queue<BinaryTreeNode< int > *>q;
    q.push(root);
    while(!q.empty()) {
        int n=q.size();
        BinaryTreeNode< int > *prev=NULL;
        while(n) {
            auto node = q.front();
            q.pop();
            if(prev) {
                prev->next=node;
            }
            prev=node;
            if(node->left) {
                q.push(node->left);
            }
            if(node->right) {
                q.push(node->right);
            }
            n--;
        }
    }
}
